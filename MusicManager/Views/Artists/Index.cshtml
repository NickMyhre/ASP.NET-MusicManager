@using MusicManager.Enumerations.Sorting
@model IEnumerable<MusicManager.ViewModels.Artist.ArtistDto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div id="listheader">
    <h1 class="text-center p-5 rounded display-2">Artists</h1>
</div>

<table class="table text-white table-hover table-dark table-striped">
    <thead>
        <tr>
            <th>
                Last Name&nbsp
                <a asp-action="Index" asp-route-id="SongAmount_asc"><i class="fa-sharp fa-solid fa-arrow-up text-white"></i></a>
                &nbsp
                <a asp-action="Index" asp-route-id="SongAmount_desc"><i class="fa-sharp fa-solid fa-arrow-down text-white"></i></a>
            </th>
            <th>
                Age&nbsp
                <a asp-action="Index" asp-route-id="SongAmount_asc"><i class="fa-sharp fa-solid fa-arrow-up text-white"></i></a>
                &nbsp
                <a asp-action="Index" asp-route-id="SongAmount_desc"><i class="fa-sharp fa-solid fa-arrow-down text-white"></i></a>
            </th> 
            <th>              
                Number of Songs&nbsp
                <a asp-action="Index" asp-route-id="SongAmount_asc"><i class="fa-sharp fa-solid fa-arrow-up text-white"></i></a>
                &nbsp
                <a asp-action="Index" asp-route-id="SongAmount_desc"><i class="fa-sharp fa-solid fa-arrow-down text-white"></i></a>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
            <tr onclick="location.href='@Url.Action("Details", "Artists", new {id = item.Id})'" class="data-row">
            <td>
                @item.GetLastName()
            </td>
            <td>
                @item.GetAge()
            </td>
            <td>
                 @item.Songs.Count()
            </td>
                <td class="text-end">
                    <a asp-controller="Artists" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-light">Edit</a>
                    <a asp-controller="Artists" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-light">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
