@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<hr />
<h1 class="justify-content-end ms-3 display-3">@Html.DisplayFor(model => model.BirthName)</h1>
<hr />

<div>
    <dl class="row border-bottom m-2 mb-4">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.StageName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.StageName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Hometown)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Hometown)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.BirthDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.BirthDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DeathDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DeathDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Fact)
