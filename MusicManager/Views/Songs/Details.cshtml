@model MusicManager.ViewModels.Song.SongDetailsDto

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
    string artists = string.Empty;
    @foreach (var item in Model.Artists)
    {
        artists += item.BirthName + " ";
    }
}

<hr />
<h1 class="justify-content-end ms-3 display-3">@Html.DisplayFor(model => model.Name)</h1>
<hr />
<div>
    <dl class="row border-bottom m-2 mb-4">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Artists)
        </dt>
        <dd class="col-sm-10">
            @artists
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Length)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Length)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Comment)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Comment)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.BillBoardRank)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.BillBoardRank)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.BillBoardDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.BillBoardDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Writer)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Writer)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Album)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Album.Title)
        </dd>
    </dl>
</div>
<div class="m-2">
    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-outline-light">Edit</a>
    <a asp-action="Index" class="btn btn-outline-light">Songs</a>
</div>
