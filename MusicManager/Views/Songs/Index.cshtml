@model IEnumerable<MusicManager.ViewModels.Song.SongDto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="listheader">

    <h1 class="text-center p-5 rounded display-2">Songs</h1>
</div>
<table class="table text-white table-hover table-dark table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
                &nbsp
                <a asp-action="Index" asp-route-id="Name_asc"><i class="fa-sharp fa-solid fa-arrow-up text-white"></i></a>
                &nbsp
                <a asp-action="Index" asp-route-id="Name_desc"><i class="fa-sharp fa-solid fa-arrow-down text-white"></i></a>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Album)
                &nbsp
                <a asp-action="Index" asp-route-id="Album_asc"><i class="fa-sharp fa-solid fa-arrow-up text-white"></i></a>
                &nbsp
                <a asp-action="Index" asp-route-id="Album_desc"><i class="fa-sharp fa-solid fa-arrow-down text-white"></i></a>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Writer)
                &nbsp
                <a asp-action="Index" asp-route-id="Writer_asc"><i class="fa-sharp fa-solid fa-arrow-up text-white"></i></a>
                &nbsp
                <a asp-action="Index" asp-route-id="Writer_desc"><i class="fa-sharp fa-solid fa-arrow-down text-white"></i></a>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
            <tr onclick="location.href='@Url.Action("Details", "Songs", new {id = item.Id})'" class="data-row">
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Album.Title)
                </td>
            <td>
                @Html.DisplayFor(modelItem => item.Writer)
            </td>
                <td class="text-end">
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-light">Edit</a> 
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-light">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
