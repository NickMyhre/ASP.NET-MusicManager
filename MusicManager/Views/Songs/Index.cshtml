@model IEnumerable<MusicManager.ViewModels.Song.SongDto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table text-white">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
                &nbsp
                <a asp-action="Index" asp-route-id="Name_asc"><i class="fa-sharp fa-solid fa-arrow-up"></i></a>
                &nbsp
                <a asp-action="Index" asp-route-id="Name_desc"><i class="fa-sharp fa-solid fa-arrow-down"></i></a>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Album)
                &nbsp
                <a asp-action="Index" asp-route-id="Album_asc"><i class="fa-sharp fa-solid fa-arrow-up"></i></a>
                &nbsp
                <a asp-action="Index" asp-route-id="Album_desc"><i class="fa-sharp fa-solid fa-arrow-down"></i></a>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Writer)
                &nbsp
                <a asp-action="Index" asp-route-id="Writer_asc"><i class="fa-sharp fa-solid fa-arrow-up"></i></a>
                &nbsp
                <a asp-action="Index" asp-route-id="Writer_desc"><i class="fa-sharp fa-solid fa-arrow-down"></i></a>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Album.Title)
                </td>
            <td>
                @Html.DisplayFor(modelItem => item.Writer)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
