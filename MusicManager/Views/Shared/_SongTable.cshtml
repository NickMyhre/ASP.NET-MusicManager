@model IEnumerable<MusicManager.ViewModels.Song.SongDto>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table text-white">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Album)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Writer)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                    <a>@Html.DisplayFor(modelItem => item.Name)</a>
            </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Album.Title)
                </td>
            <td>
                @Html.DisplayFor(modelItem => item.Writer)
            </td>
            <td>
                <a asp-controller="Songs" asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-controller="Songs"  asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-controller="Songs" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
