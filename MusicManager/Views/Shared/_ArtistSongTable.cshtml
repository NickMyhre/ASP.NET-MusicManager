@model IEnumerable<MusicManager.ViewModels.Song.SongDto>

<table class="table text-white table-hover table-dark table-striped table-responsive mt-3">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Writer)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BillBoardRank)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Length)
            </th>
            <th></th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr id="songTable" onclick="location.href='@Url.Action("Details", "Songs", new {id = item.Id})'" class="data-row">
                <td >
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Writer)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BillBoardRank)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Length)
                </td>
                <td class="text-end">
                    <a asp-controller="Songs" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-light">Edit</a>
                    <a asp-controller="Songs" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-light">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
