@model IEnumerable<MusicManager.ViewModels.Album.AlbumDto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table text-white">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)&nbsp
                <a asp-action="Index" asp-route-id="Title_asc"><i class="fa-sharp fa-solid fa-arrow-up"></i></a>
                &nbsp
                <a asp-action="Index" asp-route-id="Title_desc"><i class="fa-sharp fa-solid fa-arrow-down"></i></a>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Artists)&nbsp
                <a asp-action="Index" asp-route-id="Artist_asc"><i class="fa-sharp fa-solid fa-arrow-up"></i></a>
                &nbsp
                <a asp-action="Index" asp-route-id="Artist_desc"><i class="fa-sharp fa-solid fa-arrow-down"></i></a>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Label)&nbsp
                <a asp-action="Index" asp-route-id="Label_asc"><i class="fa-sharp fa-solid fa-arrow-up"></i></a>
                &nbsp
                <a asp-action="Index" asp-route-id="Label_desc"><i class="fa-sharp fa-solid fa-arrow-down"></i></a>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Genre)&nbsp
                <a asp-action="Index" asp-route-id="Genre_asc"><i class="fa-sharp fa-solid fa-arrow-up"></i></a>
                &nbsp
                <a asp-action="Index" asp-route-id="Genre_desc"><i class="fa-sharp fa-solid fa-arrow-down"></i></a>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReleaseDate)&nbsp
                <a asp-action="Index" asp-route-id="ReleaseDate_asc"><i class="fa-sharp fa-solid fa-arrow-up"></i></a>
                &nbsp
                <a asp-action="Index" asp-route-id="ReleaseDate_desc"><i class="fa-sharp fa-solid fa-arrow-down"></i></a>
            </th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
                <td>
                    @item.Artists.Select(x => x.BirthName).ToList().Aggregate((i, j) => i + " " + j)
                </td>
            <td>
                @Html.DisplayFor(modelItem => item.Label)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReleaseDate)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
